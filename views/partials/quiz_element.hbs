<div class="card shadow-lg mb-3 p-2">
    <div class="card-header">
        <h4 class="page-title">Testarea cunostintelor</h4>
    </div>
    <div class="card-body">
        <div>
            <div id="step-01" class="">
                <form id="quiz_form" action="/quiz/submit" method="post">
                    <div class="container">
                        <div id="carouselExampleControls" class="carousel slide" data-ride="carousel"
                             data-interval="false">
                            <div class="carousel-inner">
                                {{#each payload.quiz}}
                                    <div class="carousel-item {{#ifEquals this.id 1}}active{{/ifEquals}}">
                                        <div class="form-group">
                                            <label><h5><b>{{this.description}}</b></h5></label></br>
                                            <b><i class="fa fa-question-circle text-info fa-lg"
                                                  aria-hidden="true"></i> {{this.context}}</b>
                                        </div>
                                        <div class="container question">
                                            <input type="radio" id="id_q_{{this.id}}" name="q_{{this.id}}"
                                                   value="a">
                                            <label for="male"><b>a)</b> {{this.choice_a}}</label><br>
                                            <input type="radio" id="id_q_{{this.id}}" name="q_{{this.id}}"
                                                   value="b">
                                            <label for="female"><b>b)</b> {{this.choice_b}}</label><br>
                                            <input type="radio" id="id_q_{{this.id}}" name="q_{{this.id}}"
                                                   value="c">
                                            <label for="other"><b>c)</b> {{this.choice_c}}</label><br>
                                            <input type="radio" id="id_q_{{this.id}}" name="q_{{this.id}}"
                                                   value="d">
                                            <label for="other"><b>d)</b> {{this.choice_d}}</label><br>
                                        </div>
                                    </div>
                                {{/each}}
                            </div>

                            <div class="card-footer p-1 text-center">
                                <div class="row p-1">
                                    <div class="col">
                                        <a class="btn btn-orange text-white" href="#carouselExampleControls"
                                           role="button" data-slide="prev">
                                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                            <span class="sr-only">Previous</span>
                                        </a>
                                        <a class="btn btn-orange text-white" href="#carouselExampleControls"
                                           role="button" data-slide="next">
                                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                            <span class="sr-only">Next</span>
                                        </a>
                                    </div>
                                </div>
                                <div class="row p-1" hidden id="quiz_submit_container">
                                    <div class="col">
                                        <button  class="btn btn-success btn-lg pl-5 pr-5" type="submit">
                                            Submit
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>

            </div>
        </div>

    </div>
</div>


