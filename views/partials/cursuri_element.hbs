<div class="row">
    {{#each payload.cursuri}}
        <div class="col-md-12 col-xl-4 ">
            <div class="card overflow-hidden  shadow-sm p-3">
                {{#if this.passed}}
                    <span>
                        <i class="fa fa-graduation-cap float-right text-orange fa-lg" aria-hidden="true"></i>
                    </span>
                {{/if}}
                <div class="card-body ">
                    <h5 class="card-title mb-3">{{this.name}}</h5>
                    <p class="card-text">{{this.description}}</p>
                    {{#if this.passed}}

                        <i class="fa fa-check-square-o fa-lg text-success" aria-hidden="true"></i> {{this.score}} / 100
                    {{else}}
                        <a href="/cursuri?id={{this.id}}" class="btn btn-orange {{#unless this.available}}
                        disabled{{/unless}}" >Incepe cursul</a>
                    {{/if}}
                </div>
            </div>
        </div>
    {{/each}}
</div>
