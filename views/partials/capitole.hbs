<div class="row">
    <div class="col-12 col-lg-12">
        {{#each payload.curs}}
            <div class="card mb-4 shadow-lg mb-5 p-3">
                <div class="card-body">
                    <div class="media mb-2 card-header">
                        <i class="fad fa-books fa-3x mr-3 text-orange"></i>
                        <div class="media-body">
                            <h1 class="h4 mb-1 text-orange">{{this.description}}</h1>
                            <div class="d-sm-flex justify-content-sm-between align-items-sm-baseline">
                                <h5 class="mb-0 text-orange">
                                    {{this.cc_description}}
                                </h5>
                            </div>
                        </div>
                    </div>
                    <div class="container ">
                        {{#each this.subchapters}}
                            {{#if @key}}
                                <div class="dropdown-divider "></div>
                            {{/if}}

                            <h5 class="p-0 mt-5 "><i class="fas fa-file-alt text-gray"></i>  {{this.cs_description}}
                            </h5>
                            {{#if this.context}}
                                <pre class="bg-white text-dark border-0 text-wrap"
                                     style="font-size: 14px; font-family:-apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif">    {{this.context}}</pre>
                            {{/if}}
                            <div class="text-center"></div>
                        {{/each}}
                    </div>
                    <hr>
                </div>
            </div>
        {{/each}}
        <div class="terms text-center">
            <p><b>Felicitari pentru timpul acordat acestui curs.</b></p>
            <a href="/quiz?c={{payload.curs_id}}" class="btn btn-orange text-white">Incepe Testul</a>
        </div>
    </div>
</div>